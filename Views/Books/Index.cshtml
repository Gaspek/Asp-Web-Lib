@using Asp_Web_Lib.Controllers
@model IEnumerable<Asp_Web_Lib.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
	    <th>
		    Wydawca
	    </th>
	    <th>
		    Autorzy
	    </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicationYear)
        </th>
	    <th>
		    @Html.DisplayNameFor(model => model.CoverImage)
	    </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
	    <td>
		    @Html.DisplayFor(modelItem => item.Publisher.Name)
	    </td>
        
	    <td>
            @if (@item.Authors.Count < 1)
            {
	            @:Autor nieznany
            }
		    @foreach (var author in item.Authors)
		    {
			    <div>
				    @author.FirstName
				    @author.LastName
			    </div>
		    }
	    </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @item.PublicationYear.LocalDateTime.Day/@item.PublicationYear.LocalDateTime.Month/@item.PublicationYear.LocalDateTime.Year
        </td>
        <td>
	        @Html.DisplayFor(modelItem => item.CoverImage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Rate", "Rate", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
