@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin
@using Asp_Web_Lib.Resources
@using System.Threading
@using System.Globalization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Alexandria</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        var currentCulture = Thread.CurrentThread.CurrentCulture.Name;
    }
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Alexandria", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
            <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
        </ul>

                <!--Wyszukiwarka książek-->
                <!--<form class="d-flex" action="@Url.Action("Search", "Home")" method="get">
                    <input class="form-control me-2" type="search" name="query" placeholder="Search..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>-->

                <!--Odnośnik do powiadomień-->
                <!--<a class="btn btn-outline-light ms-3" href="@Url.Action("Notifications", "Home")" title="Notifications">
                    <i class="bi bi-bell"></i>--> <!-- Ikona powiadomień (Bootstrap Icons) -->
                <!--</a>-->

                <!--Odnośnik do koszyka-->
                <!--<a class="btn btn-outline-light ms-3" href="@Url.Action("Cart", "Home")" title="Cart">
                    <i class="bi bi-cart"></i>--> <!-- Ikona koszyka (Bootstrap Icons) -->
                <!--</a>-->

                @Html.Partial("_LoginPartial")

                <!-- Dodanie przełącznika języka -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="cultureDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @currentCulture.ToUpper()
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="cultureDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("SetLanguage", "Language", new { culture = "pl", returnUrl = Request.Url.PathAndQuery })">Polski</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("SetLanguage", "Language", new { culture = "en", returnUrl = Request.Url.PathAndQuery })">English</a></li>
                        </ul>
                    </li>
                </ul>
                <!-- Koniec dodawania przełącznika języka -->
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Alexandria</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
