@using Asp_Web_Lib.Models
@using Asp_Web_Lib.Resources
@model LoginViewModel
@{
    ViewBag.Title = @Labels.Login;
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-2 col-form-label">Email</div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2 col-form-label">@Labels.Password</div>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="offset-md-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Labels.RememberMe
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="offset-md-2 col-md-10">
                            <input type="submit" value=@Labels.Login class="btn btn-outline-dark" />
                        </div>
                    </div>
                }
            </section>
        </div>
        
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}